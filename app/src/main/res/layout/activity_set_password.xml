<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#100C0B"
    tools:context=".Activity.PasswordRegistrationActivity">
    <ImageButton
        android:id="@+id/btnBackRegisterPass"
        android:layout_gravity="start"
        android:src="@drawable/baseline_arrow_back"
        android:background="@drawable/custombutton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="#353432"
        android:layout_marginTop="10dp">
    </ImageButton>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tvtitle"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn một mật khẩu"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="26dp" />
        <EditText
            android:id="@+id/edtPasswordRegister"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/tvtitle"
            android:layout_marginTop="30dp"
            android:inputType="text"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:hint="Nhập mật khẩu"
            android:textColorHint="#E8717275"
            android:paddingLeft="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/customrectangle"
            android:ems="10">
            <requestFocus />
        </EditText>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvchinhsach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnTiepTucRegisterPass"
        android:ems="10"
        android:textSize="12dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Mật khẩu phải có ít nhất 8 kí tự"/>
    <Button
        android:id="@+id/btnTiepTucRegisterPass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Tiếp tục"
        android:enabled="true"
        android:textSize="18dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#FDB700"
        android:drawableRight="@drawable/arrow"/>
</RelativeLayout>