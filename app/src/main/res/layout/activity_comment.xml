<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#060503">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lnedtextreply"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/customrectangle"
        android:gravity="center">

        <EditText
            android:id="@+id/edtReply"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Trả lời Duyenn Duyenn..."
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="#8FDAD8D8"
            android:textSize="16dp">

            <requestFocus></requestFocus>
        </EditText>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/uparrow"
            android:id="@+id/imbReply"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:visibility="gone">
        </ImageButton>
    </LinearLayout>
</RelativeLayout>